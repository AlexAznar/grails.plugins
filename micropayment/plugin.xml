<plugin name='micropayment' version='0.1' grailsVersion='2.1.0 &gt; *'>
  <author>scharfmedia GmbH</author>
  <authorEmail>christoph.scharf@scharfmedia.de</authorEmail>
  <title>Micropayment Payment-Gateway Plugin</title>
  <description>Use micropayment.de as Payment Gateway for your app.
</description>
  <documentation>http://grails.org/plugin/micropayment</documentation>
  <type>MicropaymentGrailsPlugin</type>
  <resources>
    <resource>micropayment.MicropaymentController</resource>
    <resource>micropayment.MicropaymentCall2payCallbackService</resource>
    <resource>micropayment.MicropaymentCallbackService</resource>
    <resource>micropayment.MicropaymentCreditcardCallbackService</resource>
    <resource>micropayment.MicropaymentDebitCallbackService</resource>
    <resource>micropayment.MicropaymentEbank2payCallbackService</resource>
    <resource>micropayment.MicropaymentPrepayCallbackService</resource>
    <resource>micropayment.MicropaymentPrepayService</resource>
    <resource>micropayment.MicropaymentTagLib</resource>
    <resource>MicropaymentUtil</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='http://download.java.net/maven/2/' url='http://download.java.net/maven/2/' />
  </repositories>
  <dependencies>
    <runtime>
      <dependency group='mysql' name='mysql-connector-java' version='5.1.19' />
    </runtime>
  </dependencies>
  <plugins>
    <runtime>
      <plugin group='org.grails.plugins' name='spring-security-core' version='1.2.7.2' />
      <plugin group='org.grails.plugins' name='twitter-bootstrap' version='2.0.1.22' />
      <plugin group='org.grails.plugins' name='resources' version='1.1.6' />
      <plugin group='org.grails.plugins' name='hibernate' version='2.1.0' />
      <plugin group='org.grails.plugins' name='mail' version='1.0' />
      <plugin group='org.grails.plugins' name='jquery' version='1.7.1' />
      <plugin group='org.grails.plugins' name='svn' version='1.0.2' />
    </runtime>
    <build>
      <plugin group='org.grails.plugins' name='tomcat' version='2.1.0' />
    </build>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>